extra-source-files: CHANGELOG.md

common common-options
    build-depends:
        , base          ^>=4.14
        , llvm-hs-pure  ^>=12.0

    ghc-options:
        /usr/lib/liblambdakal.so -Wall -Wcompat -Widentities -Wincomplete-uni-patterns
        -Wincomplete-record-updates -Wredundant-constraints
        -Wnoncanonical-monad-instances -threaded -lstdc++ -dynamic

    if impl(ghc >=8.2)
        ghc-options: -fhide-source-paths

    if impl(ghc >=8.4)
        ghc-options: -Wpartial-fields

    if impl(ghc >=8.8)
        ghc-options: -Wmissing-deriving-strategies -fwrite-ide-info -hiedir=.hie

    if impl(ghc >=8.10)
        ghc-options: -Wunused-packages

    default-language: Haskell2010

executable lambdakal
    import: common-options
    main-is: Main.hs
    other-modules: 
        Parser.Parse, Parser.Lexer, Syntax, CodeGen.JIT, CodeGen.GenModule, CodeGen.GenOperand, CodeGen.LocalVar, CodeGen.Utils.Types
        , CodeGen.DataStructures.List, StdLib.GenLibs , StdLib.BaseDefs
        , CLIParameters, Processor
    hs-source-dirs: src
    build-depends:
        , bytestring  >=0.10
        , llvm-hs     ^>=12.0
        , containers    >=0.6
        , process >=1.6
        , directory >=1.3
        , mtl >=2.2 && <2.3
        , text ^>= 1.2
        , haskeline >=0.7
        , parsec >=3.1.0
        , optparse-applicative >=0.17.0.0

test-suite unit-test
  type: exitcode-stdio-1.0
  main-is: Spec.hs
  hs-source-dirs:
    test
    , src
  other-modules: 
    Parser.Parse, Parser.Lexer, Syntax, CodeGen.JIT, CodeGen.GenModule, CodeGen.GenOperand, CodeGen.LocalVar, CodeGen.Utils.Types
    , CodeGen.DataStructures.List, StdLib.GenLibs , StdLib.BaseDefs
    , CLIParameters, Processor
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
  build-depends:
    base ^>=4.14
    , tasty
    , tasty-hunit
    , process >=1.6
    , directory >=1.3
    , bytestring  >=0.10
    , llvm-hs     ^>=12.0
    , llvm-hs-pure  ^>=12.0
    , containers    >=0.6
    , mtl >=2.2 && <2.3
    , text ^>= 1.2
    , haskeline >=0.7
    , parsec >=3.1.0
    , optparse-applicative >=0.17.0.0
    , filepath >=1.4.2.1
  default-language: Haskell2010

